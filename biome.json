{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "complexity": {
                "noBannedTypes": "off",
                "noUselessFragments": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "off"
            },
            "recommended": true,
            "security": {
                "noDangerouslySetInnerHtml": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noExplicitAny": "off"
            },
            "style": {
                "noParameterAssign": "off",
                "noUselessElse": "off"
            }
        }
    },
    "organizeImports": {
        "enabled": true
    }
}